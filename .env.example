# LLM Provider Configuration
# Choose one provider and set its API key

# OpenAI Configuration (for file renaming agent and general agent)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (for general agent)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Google Configuration (for general agent)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Default Provider (openai, anthropic, or google)
# Only needed for general agent (main.py)
LLM_PROVIDER=openai

# Logging Configuration
LOG_FILE=agent.log
LOG_LEVEL=INFO
